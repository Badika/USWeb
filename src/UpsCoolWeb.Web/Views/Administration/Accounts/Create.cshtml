@model AccountCreateView

<div class="col">
    <div class="widget-box">
        <div class="widget-header">
            <span class="icon fa fa-th-list"></span>
            <h5>@Resource.ForPage("Account")</h5>
        </div>
        <div class="widget-content">
            <form asp-antiforgery="true">
                <input class="collapse" type="password" /> @* Forcing browser to not remember following form inputs *@
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Username"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Username" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Password" type="password" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <input asp-for="Email" />
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                    <div class="control-label col-md-3 col-lg-2">
                        <label asp-for="RoleId"></label>
                    </div>
                    <div class="control-content col-md-9 col-lg-5">
                        <div mvc-lookup-for="RoleId" url="~/Lookup/Role" title="@Resource.ForLookup("Role")"></div>
                    </div>
                    <div class="control-validation col">
                        <span asp-validation-for="RoleId"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-actions col-lg-7">
                        <button class="btn btn-primary">@Resource.ForAction("Submit")</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
